extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-5
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST" noValidate)
                div.space-y-4
                    input(type="hidden" name="_csrf" value=csrfToken)
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información General
                    p.text-gray-600 Añade información sobre la propiedad en venta
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titulo") Titulo del anuncio
                        input#titulo.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Escribe un titulo para tu anuncio. Ej. Casa en la playa" type="text" name="titulo" value= datos.titulo ? datos.titulo : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="descripcion") Descripción
                        textarea#descripcion.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripción de la propiedad" name="descripcion")= datos.descripcion ? datos.descripcion : ''
                        
                    div(class="md:flex md:gap-4 space-y-4 md:space-y-0")    
                        div(class="md:w-1/2 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="categoria") Categoria
                            select#categoria.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")
                                option(value='') -- Seleccione una opción--
                                each categoria in categorias
                                    option(value=categoria.id selected= datos.categoriaId ? datos.categoriaId == categoria.id ? true : false : null )= categoria.nombre

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")
                                option(value='') -- Seleccione una opción--
                                each precio in precios
                                    option(value=precio.id selected= datos.precioId ? datos.precioId == precio.id ? true : false : null )= precio.nombre

                    div(class="md:flex md:gap-4 space-y-4 md:space-y-0")    
                        div(class="md:w-1/3 ")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="habitacion") Habitaciones
                            select#habitacion.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitacion")
                                option(value='') -- Seleccione una opción--
                                - let h = 1;
                                    while h < 8
                                        option(value=h selected= datos.habitacion ? datos.habitacion == h ? true : false : null ) #{h++}
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="estacionamiento")
                                option(value='') -- Seleccione una opción--
                                - let e = 1;
                                    while e < 5
                                        option(value=e selected= datos.estacionamiento ? datos.estacionamiento == e ? true : false : null ) #{e++}
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="wc") WC
                            select#wc.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")
                                option(value='') -- Seleccione una opción--
                                - let w = 1;
                                    while w < 5
                                        option(value=w selected= datos.wc ? datos.wc == w ? true : false : null ) #{w++}
                    
                    div.border-gray-200.border-t.py-5.space-y-4
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación
                        p.text-gray-600 Ubica la propiedad en el mapa
                        #mapa.h-96

                        div 
                            p.calle= datos.calle ? datos.calle : ''

                        input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle : '')
                        input(type="hidden" name="latitud" id="latitud" value= datos.latitud ? datos.latitud : '')
                        input(type="hidden" name="longitud" id="longitud" value= datos.longitud ? datos.longitud : '')

                    input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar Cambios")
block scripts
    //- Alternativa gratis a googleMaps
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js") 
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    Script(src="/js/mapa.js")
                    