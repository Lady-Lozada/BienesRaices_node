extends ../layout/index

block contenido
    div.py-5
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-4(method="POST" action="/auth/restore")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="correo") Email
                        input#correo.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email de Registro" type="email" name="correo")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="register") ¿No tienes cuenta? Registrate

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer" 
                    type="submit" value="Enviar instrucciones")