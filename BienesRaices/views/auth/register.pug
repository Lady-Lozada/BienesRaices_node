extends ../layout/index

block contenido
    div.py-5
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-4(method="POST" action="/auth/register")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu nombre
                        input#nombre.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" 
                        type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div                        
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="apellido") Tu apellido
                        input#apellido.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Apellido" 
                        type="text" name="apellido" value= usuario ? usuario.apellido : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="correo") Email
                        input#correo.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email de Registro"
                        type="email" name="correo" value= usuario ? usuario.correo : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu contraseña
                        input#password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Contraseña" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="rpassword") Repetir contraseña
                        input#rpassword.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir contraseña" type="password" name="rpassword")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="restore") Olvide mi Contraseña

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer" 
                    type="submit" value="Crear cuenta")